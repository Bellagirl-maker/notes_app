<%= form_with(model: note, local: true) do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :tag %>
        <%= form.text_field :tag %>
    </div>

    <div>
        <%= form.label :content %>
        <%= form.text_area :content, id: note_content %>
    </div>

    <div>
        <h3>Live preview</h3>
        <div id="preview" style="border: 1px solid #ccc; padding: 10px;"></div>
    </div>

<%= form.submit %>
<% end %>